extends partials/layout

append meta
  - var title = "Connect to Server";
  - var useDotHTMLExtension = false;

block content

  .message.message-danger.txtc
    .message-content This is an example flash message (global error). 

  .container

    .col-md-6.col-lg-4.block-center.block-center-md
      .central-box.box.bg-light.box-shadowed
        img.logo-mark(src="assets/images/ok-camera-logomark.png" width="80" height="80" alt="OK Camera")
        h1.h4.txtc.mt-base.mb-md Connect to FPoIP Server
        form(action="")
          .box.box-sm.box-bordered.bg-light.border-danger.text-danger.mb-md
            h2.h4.mb-sm Error message title
            p.mb-none This is a contextual error message.
          .form-group
            input.form-control(type="text" placeholder="IP address")
          .form-group
            input.form-control(type="text" placeholder="Username")
          .form-group
            input.form-control(type="password" placeholder="IP address")
          .form-group
            button.button.button-gradient.button-block(type="submit") Connect
      .mt-base.txtc
        a(href="https://opalkelly.com/")
          img(src="assets/images/ok-camera-logo-attribution.svg" alt="By Opal Kelly")
  
  a.log-switch.button.button-default.button-sm(href="#" data-toggle="log-switch") See log

  .log.log-hidden#log
    .log-content
      a.toggle-log(href="#" data-toggle="log")
        img(src="assets/images/icon-log-toggle.svg" alt="toggle log" title="toggle log")
      h2.log-title Log Output
      pre.log-content-main this is the log's preformatted content
